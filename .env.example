# =============================================================================
# LLM Guardrail Studio - Environment Configuration
# =============================================================================
# Copy this file to .env and customize for your deployment
# =============================================================================

# =============================================================================
# Application Settings
# =============================================================================

# API key for authentication (leave empty to disable)
GUARDRAIL_API_KEY=

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
GUARDRAIL_LOG_LEVEL=INFO

# Log file path
GUARDRAIL_LOG_FILE=logs/guardrails.log

# =============================================================================
# Model Configuration
# =============================================================================

# Default model name (for reference)
GUARDRAIL_MODEL=mistralai/Mistral-7B-Instruct-v0.2

# =============================================================================
# Evaluator Thresholds
# =============================================================================

GUARDRAIL_TOXICITY_THRESHOLD=0.7
GUARDRAIL_ALIGNMENT_THRESHOLD=0.5
GUARDRAIL_HALLUCINATION_THRESHOLD=0.6
GUARDRAIL_PII_THRESHOLD=0.1
GUARDRAIL_PROMPT_INJECTION_THRESHOLD=0.5

# =============================================================================
# Evaluator Toggles
# =============================================================================

GUARDRAIL_ENABLE_TOXICITY=true
GUARDRAIL_ENABLE_HALLUCINATION=true
GUARDRAIL_ENABLE_ALIGNMENT=true
GUARDRAIL_ENABLE_PII=false
GUARDRAIL_ENABLE_PROMPT_INJECTION=false

# =============================================================================
# Database Configuration
# =============================================================================

# SQLite (default)
GUARDRAIL_DATABASE_URL=sqlite:///guardrails.db

# PostgreSQL (production)
# GUARDRAIL_DATABASE_URL=postgresql://user:password@localhost:5432/guardrails

# PostgreSQL connection pool settings
# DATABASE_POOL_SIZE=5
# DATABASE_MAX_OVERFLOW=10

# =============================================================================
# Redis Cache (Optional)
# =============================================================================

# Enable Redis caching
# REDIS_URL=redis://localhost:6379/0

# Cache TTL in seconds
# CACHE_TTL=3600

# =============================================================================
# API Server Settings
# =============================================================================

# Server host and port
HOST=0.0.0.0
PORT=8000

# Number of workers (for production)
WORKERS=4

# CORS origins (comma-separated)
CORS_ORIGINS=*

# Rate limiting (requests per minute)
RATE_LIMIT=100

# =============================================================================
# Dashboard Settings
# =============================================================================

# Dashboard port
DASHBOARD_PORT=8501

# =============================================================================
# Docker Settings
# =============================================================================

# Port mappings
API_PORT=8000
DASHBOARD_PORT=8501

# PostgreSQL settings (for docker-compose)
POSTGRES_USER=guardrail
POSTGRES_PASSWORD=guardrail_secret
POSTGRES_DB=guardrails

# =============================================================================
# Monitoring Settings
# =============================================================================

# Prometheus port
PROMETHEUS_PORT=9090

# Grafana settings
GRAFANA_PORT=3000
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin

# =============================================================================
# Webhook Settings
# =============================================================================

# Default webhook URL (optional)
# WEBHOOK_URL=https://your-webhook-endpoint.com/guardrails

# Webhook secret for HMAC signing
# WEBHOOK_SECRET=your_secret_key

# =============================================================================
# Security Settings
# =============================================================================

# JWT secret for token signing (production)
# JWT_SECRET=your_jwt_secret_key

# JWT expiration (hours)
# JWT_EXPIRATION_HOURS=24

# =============================================================================
# Performance Settings
# =============================================================================

# Batch processing settings
BATCH_SIZE=32
MAX_WORKERS=4
TIMEOUT=30

# Enable evaluation caching
ENABLE_CACHING=false
CACHE_SIZE=1000
